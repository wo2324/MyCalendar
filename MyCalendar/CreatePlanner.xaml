<Window x:Class="MyCalendar.CreatePlanner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCalendar"
        mc:Ignorable="d"
        Title="CreatePlanner" Height="450" Width="800">
    <Grid Background="#747474">
        <Border Margin="280, 40, 280, 40" Background="#50514F" CornerRadius="10">
            <StackPanel Margin="20">
                <Label Content="Create planner" HorizontalAlignment="Left" FontSize="16" Foreground="#D4D4D4D4"/>
                <Separator Foreground="#E9E9E9E9"></Separator>
                
                <Button Background="#D4D4D4D4" Margin="130,20,0,20" Content="Confirm" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
