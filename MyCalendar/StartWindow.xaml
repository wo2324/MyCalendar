<Window x:Class="MyCalendar.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCalendar"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid Background="#747474">
        <Border Margin="280, 80, 280, 80" Background="#50514F" CornerRadius="10">
            <StackPanel Margin="20">
                <Label Content="Login" HorizontalAlignment="Center" FontSize="32" Foreground="#D4D4D4D4"/>
                <Separator Foreground="#E9E9E9E9"></Separator>
                <Label Content="Login" HorizontalAlignment="Left" FontSize="16" Foreground="#D4D4D4D4"/>
                <TextBox Background="#E9E9E9E9" Foreground="#1B1B1B"/>
                <Label Content="Password" HorizontalAlignment="Left" FontSize="16" Foreground="#D4D4D4D4"/>
                <PasswordBox Background="#E9E9E9E9" Foreground="#1B1B1B"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
