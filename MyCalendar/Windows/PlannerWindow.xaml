<Window x:Class="MyCalendar.PlannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCalendar"
        mc:Ignorable="d"
        Title="Planner" 
        Height="450" 
        Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left">
                <DataGrid x:Name="PlannerDataGrid" 
                AutoGenerateColumns="True"
                ColumnWidth="*"
                HeadersVisibility="Column"
                CanUserSortColumns="False" 
                CanUserReorderColumns="False" 
                CanUserResizeColumns="False" 
                CanUserResizeRows="False"
                CanUserAddRows="False"
                SelectionUnit="Cell"
                SelectionMode="Extended">
                </DataGrid>
            </StackPanel>
            <StackPanel DockPanel.Dock="Left">
                <Button x:Name="CreatePlannerButton" Margin="0,10,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Confirm" Background="#D4D4D4D4" Click="CreatePlannerButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
