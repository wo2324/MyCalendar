<Window x:Class="MyCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCalendar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#747474">
        <Border Margin="20" Background="#50514F" CornerRadius="10">
            <DockPanel Margin="20" LastChildFill="False">
                <Border DockPanel.Dock="Left" Width="200" Margin="10" Background="#D4D4D4D4">
                    <Label>Plany</Label>
                </Border>
                <Border DockPanel.Dock="Left" Width="200" Margin="10" Background="#D4D4D4D4">
                    <Label>Stwórz nowy plan</Label>
                </Border>
                <Border DockPanel.Dock="Right" Width="200" Margin="10" Background="#D4D4D4D4">
                    <Label>Konto</Label>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>
